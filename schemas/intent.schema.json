{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "VoiceIntent",
  "type": "object",
  "properties": {
    "intent": {"type": "string", "enum": ["greeting","check_order","handoff","goodbye"]},
    "slots": {
      "type": "object",
      "properties": {
        "order_id": {"type": "string", "pattern": "^[A-Z0-9-]{6,}$"},
        "phone": {"type": "string"}
      },
      "additionalProperties": false
    },
    "confidence": {"type": "number", "minimum": 0, "maximum": 1},
    "action": {"type": "string"}
  },
  "required": ["intent","slots","confidence"]
}